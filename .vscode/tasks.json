{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build project",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${workspaceFolder}\\calculator.exe",
                "lexer.cpp",
                "parser.cpp",
                "main.cpp",
                "options.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Builds the project. :)"
        }
    ],
    "version": "2.0.0"
}